{
  "verbose": false,
  "plugins": {
    "local": {
      "disabled": true,
      "browsers": [
        "chrome",
        "firefox"
      ]
    },
    "sauce": {
      "disabled": true,
      "browsers": [
        {
          "browserName": "microsoftedge",
          "platform": "Windows 10",
          "version": ""
        },
        {
          "browserName": "firefox",
          "platform": "Windows 10",
          "version": "latest-4"
        },
        {
          "browserName": "firefox",
          "platform": "Windows 10",
          "version": "latest"
        },
        {
          "browserName": "chrome",
          "platform": "Windows 10",
          "version": "latest-4"
        },
        {
          "browserName": "chrome",
          "platform": "Windows 10",
          "version": "latest"
        },
        {
          "browserName": "safari",
          "platform": "macOS 10.12",
          "version": "10.1"
        },
        {
          "browserName": "safari",
          "platform": "macOS 10.13",
          "version": "11.1"
        }
      ]
    },
    "@advanced-rest-client/wct-istanbub": {
      "dir": "./coverage",
      "reporters": [
        "text-summary",
        "lcov"
      ],
      "include": [
        "**/*.js"
      ],
      "exclude": [
        "**/test/**",
        "**/demo/**",
        "**/tasks/**"
      ],
      "thresholds": {
        "global": {
          "statements": 80,
          "branches": 80,
          "functions": 90,
          "lines": 80
        }
      }
    }
  }
}
